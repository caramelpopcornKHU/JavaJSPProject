<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Football Site</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- 서블릿 선언 (FootballServlet) -->
    <servlet>
        <servlet-name>FootballServlet</servlet-name>
        <servlet-class>servlet.FootballServlet</servlet-class>
        
    </servlet>
    
    <!-- 서블릿 매핑 (/main 경로로 접속하면 FootballServlet 실행) -->
    <servlet-mapping>
        <servlet-name>FootballServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
<!-- 기존 FootballServlet 매핑 아래에 추가 -->
<servlet>
    <servlet-name>AdminServlet</servlet-name>
    <servlet-class>servlet.AdminServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>AdminServlet</servlet-name>
    <url-pattern>/admin</url-pattern>
</servlet-mapping>
    <!-- 데이터소스 리소스 참조 (데이터베이스 연결용) -->
    <resource-ref>
        <description>MySQL DataSource for Football DB</description>
        <res-ref-name>jdbc/footballdb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>
</web-app>